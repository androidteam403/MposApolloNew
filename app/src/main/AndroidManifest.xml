<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.apollopharmacy.mpospharmacist">

    <application
        android:name=".root.ApolloMposApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_apollo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round_apollo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".ui.splash.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">

        </activity>

        <activity android:name=".ui.adminlogin.AdminLoginActivity"/>
        <activity android:name=".ui.storesetup.StoreSetupActivity"/>
        <activity android:name=".ui.dashboard.DashboardActivity" />
        <activity android:name=".ui.searchproduct.SearchProductActivity" />
        <activity android:name=".ui.newadminloginsetup.NewAdminLoginSetUp" />
        <activity android:name=".ui.pharmacistlogin.PharmacistLoginActivity" />
        <activity android:name=".ui.searchuser.SearchUserActivity" />
        <activity android:name=".ui.adduser.AddUserActivity"/>
        <activity android:name=".ui.adddoctor.AddDoctorActivity" />

        <activity android:name=".ui.searchcustomerdoctor.SearchCustomerDoctorDetailsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.customerdetails.CustomerDetailsActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.doctordetails.DoctorDetailsActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".ui.customerdoctorinfo.CustomerDoctorInfoActivity"/>
        <activity android:name=".ui.additem.AddItemActivity"/>
    </application>

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.google.android.permission.gsf.permission" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>