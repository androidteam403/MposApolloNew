<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.apollopharmacy.mpospharmacist">

    <application
        android:name=".root.ApolloMposApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_apollo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_confing"
        android:roundIcon="@mipmap/ic_launcher_round_apollo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.home.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.splash.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">

        </activity>
        <activity
            android:name=".ui.storesetup.StoreSetupActivity"
            android:theme="@style/CustomTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.searchproduct.SearchProductActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.newadminloginsetup.NewAdminLoginSetUp"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.pharmacistlogin.PharmacistLoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.searchuser.SearchUserActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.addcustomer.AddCustomerActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.adddoctor.AddDoctorActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.searchcustomerdoctor.SearchCustomerDoctorDetailsActivity"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>
        <activity
            android:name=".ui.additem.AddItemActivity"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>
        <activity
            android:name=".ui.customerdetails.CustomerDetailsActivity"
            android:theme="@style/CustomTheme"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>
        <activity
            android:name=".ui.doctordetails.DoctorDetailsActivity"
            android:theme="@style/CustomTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.batchonfo.BatchInfoActivity"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>
        <activity
            android:name=".ui.pay.PayActivity"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>
        <activity
            android:name=".ui.searchproductlistactivity.ProductListActivity"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>
        <activity
            android:name=".ui.medicinedetailsactivity.MedicinesDetailsActivity"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>
        <activity
            android:name=".ui.orderreturnactivity.OrderReturnActivity"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>
        <activity
            android:name=".ui.customerdoctorinfo.CustomerDoctorInfoActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.corporatedetails.CorporateDetailsActivity"
            android:theme="@style/CustomTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <!-- Ezetap provides -->
        <provider
            android:name="com.ezetap.sdk.EzetapFileProvider"
            android:authorities="${applicationId}.EzetapFileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.google.android.permission.gsf.permission" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
</manifest>