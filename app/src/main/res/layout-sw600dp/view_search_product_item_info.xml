<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="productInfo"
            type="com.apollo.pharmacy.ui.searchproduct.model.ProductInfoPojo" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five_dp"
            android:layout_marginEnd="@dimen/five_dp"
            android:weightSum="5"
            android:paddingTop="@dimen/five_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.28"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:textColor="@color/black"
                android:text="@{productInfo.productSno}"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:text="@{productInfo.artCode}"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.83"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:text="@{productInfo.productDescription}"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text="@{productInfo.prodCategory}"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.6"                  android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text="@{productInfo.subCategory}"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text="@{productInfo.schCatg}"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.65"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text="@{productInfo.prodManufacture}"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.55"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text="@{productInfo.rackId}"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text="@{productInfo.genericName}"/>
        </LinearLayout>

    </LinearLayout>
</layout>