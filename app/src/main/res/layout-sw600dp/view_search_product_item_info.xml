<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable
            name="productInfo"
            type="com.apollo.pharmacy.ui.searchproduct.model.ProductInfoPojo" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five_dp"
            android:paddingTop="@dimen/five_dp"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="@dimen/forty_dp"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:paddingBottom="@dimen/five_dp"
                android:textColor="@color/black"
                android:text="@{productInfo.productSno}"/>
            <TextView
                android:layout_width="@dimen/forty_dp"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:paddingBottom="@dimen/five_dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:text="@{productInfo.artCode}"/>
            <TextView
                android:layout_width="@dimen/one_hundred_forty_dp"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:paddingBottom="@dimen/five_dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:text="@{productInfo.productDescription}"/>
            <TextView
                android:layout_width="@dimen/ninety_dp"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text="@{productInfo.prodCategory}"/>
            <TextView
                android:layout_width="@dimen/ninety_dp"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text="@{productInfo.subCategory}"/>
            <TextView
                android:layout_width="@dimen/one_hundred_ten_dp"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text="@{productInfo.schCatg}"/>
            <TextView
                android:layout_width="@dimen/one_hundred_twenty_dp"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text="@{productInfo.prodManufacture}"/>
            <TextView
                android:layout_width="@dimen/seventy_dp"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text="@{productInfo.rackId}"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_dimen_12"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text="@{productInfo.genericName}"/>
        </LinearLayout>

    </LinearLayout>
</layout>