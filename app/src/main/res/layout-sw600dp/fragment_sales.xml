<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="callback"
            type="com.apollo.pharmacy.ui.dashboard.fragments.sales.SalesMvpPresenter" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/five_dp"
        android:background="@drawable/outlet_yellow"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/cpb_yellow"
            android:padding="@dimen/five_dp">

            <TextView
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/label_search"
                android:textColor="@color/black" />


            <LinearLayout
                android:layout_marginStart="50dp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/thirty_dp"
                android:background="@drawable/rectangular_shape"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editSearch"
                    android:layout_width="750dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="@string/label_searchproduct"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:paddingStart="@dimen/five_dp"
                    android:paddingBottom="@dimen/five_dp"
                    android:textSize="@dimen/text_dimen_12"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/label_todo"
                    android:paddingTop="@dimen/five_dp"
                    android:src="@drawable/places_ic_search" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/eighty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:background="@color/red"
                android:fontFamily="@font/roboto_regular"
                android:padding="@dimen/two_dp"
                android:text="@string/label_clearall"
                android:textColor="@color/white"
                android:textSize="@dimen/text_dimen_16" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/grey"
            android:weightSum="8.5"
            android:padding="@dimen/five_dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:text="S.No."
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_dimen_13"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:text="Art Code"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_dimen_13"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_dimen_13"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Qty."
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_dimen_13"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Cat."
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_dimen_13"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.65"
                android:layout_height="wrap_content"
                android:text="Manuf."
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_dimen_13"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.85"
                android:layout_height="wrap_content"
                android:text="Batch No."
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_dimen_13"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.85"
                android:layout_height="wrap_content"
                android:text="Expiry Dt."
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_dimen_13"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.85"
                android:layout_height="wrap_content"
                android:text="MRP REMI."
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_dimen_13"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="wrap_content"
                android:text="Tax%"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_dimen_13"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.85"
                android:layout_height="wrap_content"
                android:text="Tax Value"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_dimen_13"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_dimen_13"
                android:textColor="@color/white"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/address_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginBottom="@dimen/five_dp" />
    </LinearLayout>
</layout>