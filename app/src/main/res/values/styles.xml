<resources>

    <!-- Base application theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_bg_img</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!--        <item name="android:windowAnimationStyle">@style/animationName</item>-->
    </style>

    <style name="animationName" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_to_left</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_dimen_14</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="EditTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">0.2dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="EditTextInputLayoutStylenew" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">0.2dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat"> <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">20sp
        </item> <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/grey</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/grey</item>
    </style>

    <style name="TextAppearanceBlack.App.TextInputLayout" parent="@android:style/TextAppearance">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_dimen_14</item>
    </style>

    <!--      navigation iten theme-->
    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="NewEditTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">0.2dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:theme">@style/ThemeOverlay.TextInputEditText.OutlinedBox.CustomFont
        </item>
    </style>

    <style name="LoginEditTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">0.2dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:theme">@style/ThemeOverlay.TextInputEditText.OutlinedBox.CustomFont
        </item>
    </style>

    <style name="SubstituteItemLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">0.1dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:theme">@style/ThemeOverlay.TextInputEditText.OutlinedBox.CustomFont
        </item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="RobotoBoldTextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- region TextInputLayout & TextInputEditText styles -->
    <style name="TextInputLayout.OutlineBox.CustomFont" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:theme">@style/ThemeOverlay.TextInputEditText.OutlinedBox.CustomFont
        </item>
    </style>

    <style name="ThemeOverlay.TextInputEditText.OutlinedBox.CustomFont" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="editTextStyle">@style/TextInputEditText.OutlinedBox.CustomFont</item>
    </style>

    <style name="TextInputEditText.OutlinedBox.CustomFont" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="CustomFontTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/TextInputLayoutHintText</item>
        <item name="helperTextTextAppearance">@style/TextInputLayoutHelperText</item>
        <item name="errorTextAppearance">@style/TextInputLayoutErrorText</item>
    </style>

    <style name="TextInputLayoutHintText" parent="TextAppearance.Design.Hint">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextInputLayoutHelperText" parent="TextAppearance.Design.HelperText">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextInputLayoutErrorText" parent="TextAppearance.Design.Error">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <!-- picker application -->
    <style name="fadeinandoutcustomDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@null</item>
        <item name="android:windowAnimationStyle">@style/fadeinandoutDialogAnimation</item>
    </style>

    <style name="fadeinandoutDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_frag_fade_in_p</item>
        <item name="android:windowExitAnimation">@anim/anim_frag_fade_out_p</item>
    </style>

    <style name="PickerNavigationActivityAppTheme" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/actionbar_color</item>
        <item name="colorPrimaryDark">@color/actionbar_color</item>
        <item name="colorAccent">@color/actionbar_color</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.NavigationDrawerNew.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NavigationDrawerNew.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomerSpinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">1sp</item>
    </style>
</resources>
