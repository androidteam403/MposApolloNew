<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.mpospharmacist.ui.doctordetails.DoctorDetailsMvpPresenter" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_customer_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/fifty_dp"
                    android:layout_height="@dimen/fifty_dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:alpha="0.8"
                    android:src="@drawable/ic_back_arrow"
                    android:onClick="@{()-> callback.onBackPressedClick()}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/five_dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/label_doctor_details"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_dimen_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/ten_dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ten_dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phone_number"
                        style="@style/EditTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/roboto_regular">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/one_hundred_dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="top"
                            android:hint="@string/label_phone_number_id"
                            android:inputType="text"
                            android:padding="@dimen/ten_dp"
                            android:singleLine="true"
                            android:textSize="@dimen/text_dimen_15" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="@dimen/thirty_five_dp"
                        android:layout_height="@dimen/thirty_five_dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:layout_marginEnd="@dimen/ten_dp"
                        android:layout_toStartOf="@+id/mike"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_search_product" />

                    <ImageView
                        android:id="@+id/mike"
                        android:layout_width="@dimen/thirty_five_dp"
                        android:layout_height="@dimen/thirty_five_dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_voice_search" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/doctor_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/ten_dp"
                        android:background="@drawable/bg_white"
                        android:baselineAligned="false"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/ten_dp"
                                android:layout_weight="0.5"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Doctor RegNo"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_dimen_12" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/fifteen_dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Speciality"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_dimen_12" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/fifteen_dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Address"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_dimen_12" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/ten_dp"
                                android:layout_weight="0.5"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Doctor Name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_dimen_12" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/fifteen_dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Place Of Practice"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_dimen_12" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/fifteen_dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Phone Number"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_dimen_12" />
                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ten_dp"
                            android:layout_marginBottom="@dimen/fifteen_dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/select_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_select_btn"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/label_select"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_dimen_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/ten_dp"
                                android:layout_toEndOf="@+id/select_btn"
                                android:background="@drawable/bg_select_btn"
                                android:backgroundTint="@color/colorPrimary"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/label_edit"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_16" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/no_doctor_found_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/thirty_dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/label_no_doctor_found"
                        android:textColor="@color/no_customer_found"
                        android:textSize="@dimen/text_dimen_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:layout_marginBottom="@dimen/fifteen_dp"
                        android:background="@drawable/bg_select_btn"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/roboto_bold"
                        android:onClick="@{()-> callback.onAddDoctorClick()}"
                        android:text="@string/label_add_new_doctor"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_dimen_18" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
