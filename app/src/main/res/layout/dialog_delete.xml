<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/twenty_five_dp"
        android:background="@drawable/dialog_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp">



        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dimen10dp"
            android:tint="@color/black"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_close" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/print_img"
                android:layout_width="@dimen/forty_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_artboard_36" />

        </RelativeLayout>



        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/print_img"
            android:layout_marginTop="@dimen/dimen5dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="12dp"
            android:paddingTop="4dp"
            android:text="Do you want to Untag the Box"
            android:paddingRight="12dp"
            android:paddingBottom="16dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/dialog_message"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:backgroundTint="@color/yellow"
            android:background="@drawable/dialog_background_new"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialogButtonNO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/price_bold"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:stateListAnimator="@null"
                android:text="@string/label_cancel"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <View
                android:id="@+id/separator"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/dialogButtonOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/price_bold"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:stateListAnimator="@null"
                android:text="@string/label_yes"
                android:textAlignment="center"
                android:textColor="@color/black"
               />
        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>
</layout>
