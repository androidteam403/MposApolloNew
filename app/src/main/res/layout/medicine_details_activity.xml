<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/seventeen_dp"
                android:contentDescription="@string/label_img"
                android:src="@drawable/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:layout_marginTop="@dimen/seventeen_dp"
                android:text="@string/label_new_order"
                android:textColor="@color/white"
                android:textSize="@dimen/text_dimen_18"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/seventeen_dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/label_10001936"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fifteen_dp"
                android:layout_marginEnd="@dimen/five_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Add Medicines:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dimen_16"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/five_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:background="@color/design_default_color_primary"
                    android:contentDescription="@string/label_img"
                    android:src="@drawable/places_ic_search" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/five_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:background="@color/cpb_yellow"
                    android:contentDescription="@string/label_img"
                    android:src="@drawable/mikes" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/five_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:background="@color/Light_green"
                    android:contentDescription="@string/label_img"
                    android:src="@drawable/barcode" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/fifteen_dp"
                        android:layout_marginEnd="@dimen/thirty_five_dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Clear All:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_dimen_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:layout_marginEnd="@dimen/two_dp"
                        android:background="@color/red"
                        android:contentDescription="@string/label_img"
                        android:src="@drawable/delete_white" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginBottom="@dimen/three_dp"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/thirty_five_dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:text="ITEMSLIST (7)"
                    android:textStyle="bold"
                    android:textColor="@color/black" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/eighty_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_weight="0.6"
                    android:fontFamily="@font/roboto_regular"
                    android:text="MRP()"
                    android:textSize="@dimen/text_dimen_12"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/roboto_regular"
                    android:text="QTY."
                    android:textSize="@dimen/text_dimen_12"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/text_dimen_12"
                    android:fontFamily="@font/roboto_regular"
                    android:text="TOTAL()"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/footer"
                android:id="@+id/medicineRecycle"/>
            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:weightSum="4"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_dimen_9"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_height="wrap_content"
                    android:text="Disc Type\n5644544"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_dimen_9"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_height="wrap_content"
                    android:text="Pharma\n0.00"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_dimen_9"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_height="wrap_content"
                    android:text="FMCG\n0.00"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_dimen_9"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_height="wrap_content"
                    android:text="PL\n50.00"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_dimen_9"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:text="RoundedAmt\n564454564"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_dimen_9"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_height="wrap_content"
                        android:text="MRP Total\n5.36"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_dimen_9"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_height="wrap_content"
                        android:text="Taxable Amt\n46.64"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_dimen_9"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_height="wrap_content"
                        android:text="Disc.Amt\n0.00"/>
                </LinearLayout>
            </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               android:background="@color/cpb_yellow"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/text_dimen_18"
                   android:textColor="@color/white"
                   android:layout_marginStart="@dimen/fifteen_dp"
                   android:textStyle="bold"
                   android:text="129.70"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/text_dimen_10"
                   android:textColor="@color/black"
                   android:text="Savings:20.50(10%)"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/text_dimen_20"
                   android:text="PAY"
                   android:textColor="@color/black"
                   android:textStyle="bold"/>
           </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>