<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/five_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_marginEnd="@dimen/five_dp"
        android:background="@drawable/square_stroke_black_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/five_dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Fulfilment ID : "
                        android:textColor="#b6b4af"
                        android:textSize="@dimen/thirteen_sp" />

                    <TextView
                        android:id="@+id/filment_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Total Items : "
                        android:textColor="#b6b4af"
                        android:textSize="@dimen/ten_sp" />

                    <TextView
                        android:id="@+id/total_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/linearlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/price_bold"
                        android:id="@+id/scanned_code"
                        android:text=""                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen10dp" />

                    <LinearLayout
                        android:id="@+id/tag_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="@dimen/dimen6dp">


                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="@dimen/dimen30dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/tag_box" />

                            <ImageView
                                android:id="@+id/tick_mark"
                                android:layout_width="@dimen/fifteen_dp"
                                android:layout_height="@dimen/fifteen_dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_circular_shape"
                                android:src="@drawable/tick_mark"
                                android:visibility="gone" />
                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_horizontal"
                            android:text="Click on Tag Box icon"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ten_sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <ImageView

                        android:id="@+id/scan_delete"
                        android:layout_width="19dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimen_9_sp"
                        android:layout_marginEnd="@dimen/five_dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/cross_red_delete_icon"
                        android:visibility="visible" />


                </LinearLayout>

