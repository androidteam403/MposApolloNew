<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_dp"
                android:src="@drawable/icon_back"
                android:layout_marginTop="@dimen/seventeen_dp"
                android:contentDescription="@string/label_img" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_dimen_18"
                android:layout_marginStart="@dimen/ten_dp"
                android:layout_marginTop="@dimen/seventeen_dp"
                android:text="@string/label_new_order"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_10001936"
                android:layout_marginTop="@dimen/seventeen_dp"
                android:layout_marginStart="@dimen/twenty_dp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_search_for_items"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_marginStart="@dimen/fifteen_dp"
            android:fontFamily="@font/roboto_regular" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/fifteen_dp"
            android:layout_marginEnd="@dimen/five_dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangular_shape"
                android:layout_marginTop="@dimen/ten_dp"
                android:importantForAutofill="no"
                android:focusable="false"
                android:inputType="text"
                tools:ignore="LabelFor" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:background="@color/design_default_color_primary"
                android:layout_marginTop="@dimen/ten_dp"
                android:src="@drawable/places_ic_search"
                android:layout_marginStart="@dimen/five_dp"
                android:contentDescription="@string/label_img" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:src="@drawable/mikes"
                android:background="@color/cpb_yellow"
                android:layout_marginStart="@dimen/five_dp"
                android:contentDescription="@string/label_img" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:src="@drawable/barcode"
                android:background="@color/Light_green"
                android:layout_marginStart="@dimen/five_dp"
                android:contentDescription="@string/label_img" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_5_items_found"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="@dimen/ten_dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productRecycler"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</layout>
