<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/forgot_details_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/header_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/kiosk_mode_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Kiosk Exit Password"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/close_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:padding="5dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitEnd"
                android:src="@drawable/icon_close"
                android:tint="#000000"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/header_text_layout"
            android:background="#ccc"
            android:id="@+id/view_id"/>


        <EditText
            android:id="@+id/forgot_details_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_id"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:hint="Enter password"
            android:inputType="textEmailAddress"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/forgot_details_reset_button"
            android:layout_width="match_parent"
            android:layout_below="@+id/forgot_details_email"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:text="send" />
    </RelativeLayout>
</LinearLayout>