<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.pbas.ePrescription.EPrescriptionActivity">

        <LinearLayout
            android:id="@+id/action_bar_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/twenty_five_dp"
            android:background="@color/cpb_yellow"
            android:orientation="horizontal"
            android:paddingStart="@dimen/twenty_dp"
            android:paddingEnd="@dimen/five_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Site Name: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_dimen_11" />

            <TextView
                android:id="@+id/site_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dimen_11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fifteen_dp"
                android:layout_marginTop="@dimen/three_dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Site Id: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_dimen_11" />

            <TextView
                android:id="@+id/site_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dimen_11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fifteen_dp"
                android:layout_marginTop="@dimen/three_dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Terminal Id: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_dimen_11" />

            <TextView
                android:id="@+id/terminal_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dimen_11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_bar_view"
            android:layout_marginStart="@dimen/five_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginEnd="@dimen/five_dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/searchbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/search_byfulfimentid"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/thirty_five_dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_rectangular_shape"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/label_search_by_prescno_doc_name_customer_name_phoneno"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:padding="@dimen/five_dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/dimen10sp" />

                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/thirty_five_dp"
                    android:background="@drawable/ic_rectangular_shape"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/five_dp"
                    android:src="@drawable/search_icon" />

                <ImageView
                    android:id="@+id/deleteCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/thirty_five_dp"
                    android:background="@drawable/ic_rectangular_shape"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/five_dp"
                    android:src="@drawable/cross_black"
                    android:visibility="gone" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fullfilment_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_dp" />

            <TextView
                android:id="@+id/no_order_found_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="@string/label_no_order_found"
                android:textColor="@color/red"
                android:textSize="@dimen/dimen14sp"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.mpospharmacistTest.ui.pbas.ePrescription.EPrescriptionMvpPresenter" />
    </data>
</layout>