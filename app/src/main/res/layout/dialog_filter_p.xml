<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sixty_dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen60dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dimen25dp"
                            android:layout_height="@dimen/dimen20dp"
                            android:layout_marginStart="@dimen/dimen10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/filter" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen10dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="FILTERS"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen18sp"
                            android:textStyle="bold" />

                        <!--                        <TextView-->

                        <!--                            android:layout_width="@dimen/dimen80dp"-->
                        <!--                            android:layout_height="21dp"-->
                        <!--                            android:layout_marginLeft="@dimen/dimen10dp"-->
                        <!--                            android:background="@drawable/rectangular_box_clear"-->
                        <!--                            android:fontFamily="@font/roboto_regular"-->
                        <!--                            android:padding="3dp"-->
                        <!--                            android:text="CLEAR ALL"-->
                        <!--                            android:textAlignment="center"-->
                        <!--                            android:textColor="@color/white"-->
                        <!--                            android:textSize="@dimen/dimen12sp"-->
                        <!--                            android:textStyle="normal" />-->

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/filter_close_icon"
                        android:layout_width="25dp"
                        android:layout_height="@dimen/dimen25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/five_dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/black_delete_icon" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen3dp"
                    android:background="#A9A9A9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginTop="@dimen/dimen18sp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Dispatch Cutoff Time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dispatch_cuttoff_time_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginEnd="@dimen/five_dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen3dp"
                    android:background="#A9A9A9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginTop="@dimen/dimen18sp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Bill Date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bill_date_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginEnd="@dimen/five_dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen3dp"
                    android:background="#A9A9A9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginTop="@dimen/dimen18sp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Stock Availabilty"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/stock_available_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginEnd="@dimen/five_dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen1dp"
                    android:background="#A9A9A9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Order Type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_type_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_marginEnd="@dimen/five_dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen1dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:background="#A9A9A9" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="Order Category"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_category_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_marginEnd="@dimen/five_dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen1dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:background="#A9A9A9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Payment Type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/payment_type_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_marginEnd="@dimen/five_dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen1dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:background="#A9A9A9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Order Source"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_source_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_marginEnd="@dimen/five_dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen1dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:background="#A9A9A9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Customer Type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/customer_type_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_marginEnd="@dimen/five_dp" />

                <!--                <View-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="@dimen/dimen1dp"-->
                <!--                    android:layout_marginTop="@dimen/dimen5dp"-->
                <!--                    android:background="#A9A9A9" />-->
                <View
                    android:id="@+id/reverification_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen1dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:background="#A9A9A9" />

                <TextView
                    android:id="@+id/reverification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Reverification"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reverification_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_marginEnd="@dimen/five_dp"
                    android:layout_marginBottom="@dimen/dimen60dp" />
            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/five_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <Button
                    android:id="@+id/clear"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen50dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/red_ripple_btn_bg"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Clear All"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/apply_filters"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen50dp"
                    android:layout_marginStart="@dimen/_4dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/btn_continue_ripple_login"
                    android:fontFamily="@font/roboto_bold"
                    android:text="APPLY FILTERS"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</layout>