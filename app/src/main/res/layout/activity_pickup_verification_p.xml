<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/layout_header"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/actionbar_color"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dimen10dp"
                android:paddingEnd="@dimen/dimen10dp">

                <ImageView
                    android:id="@+id/back_click"
                    android:layout_width="@dimen/dimen20dp"
                    android:layout_height="@dimen/dimen20dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/dimen3dp"
                    android:src="@drawable/ic_back_arrow_white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_five_dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Fulfilment ID"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/fullfilment_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen12sp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/warning_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:orientation="horizontal"
                android:padding="@dimen/five_dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/twenty_dp"
                    android:layout_height="@dimen/twenty_dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/warning_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/three_dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Current Order Status is Partially Picked.\n
Do you want to proceed with Packing?"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen10sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/five_dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/button_yes1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/okay_btn_bg"
                            android:backgroundTint="@color/green"
                            android:fontFamily="@font/roboto_bold"
                            android:onClick="@{()-> callback.onPartialWarningYesClick()}"
                            android:paddingStart="@dimen/ten_dp"
                            android:paddingTop="@dimen/two_dp"
                            android:paddingEnd="@dimen/ten_dp"
                            android:paddingBottom="@dimen/two_dp"
                            android:text="Yes"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen10sp" />

                        <TextView
                            android:id="@+id/button_no1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/five_dp"
                            android:layout_toRightOf="@id/button_yes"
                            android:background="@drawable/okay_btn_bg"
                            android:backgroundTint="@color/black"
                            android:fontFamily="@font/roboto_bold"
                            android:onClick="@{()-> callback.onPartialWarningNoClick()}"
                            android:paddingStart="@dimen/ten_dp"
                            android:paddingTop="@dimen/two_dp"
                            android:paddingEnd="@dimen/ten_dp"
                            android:paddingBottom="@dimen/two_dp"
                            android:text="No"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen10sp" />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/warning_text_not_available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:orientation="horizontal"
                android:padding="@dimen/five_dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/twenty_dp"
                    android:layout_height="@dimen/twenty_dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/warning_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/three_dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Current Order Status is Not Available.\n
Do you want to proceed with Packing?"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen10sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/five_dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/button_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/okay_btn_bg"
                            android:backgroundTint="@color/green"
                            android:fontFamily="@font/roboto_bold"
                            android:onClick="@{()-> callback.onPartialWarningYesClick()}"
                            android:paddingStart="@dimen/ten_dp"
                            android:paddingTop="@dimen/two_dp"
                            android:paddingEnd="@dimen/ten_dp"
                            android:paddingBottom="@dimen/two_dp"
                            android:text="Yes"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen10sp" />

                        <TextView
                            android:id="@+id/button_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/five_dp"
                            android:layout_toRightOf="@id/button_yes"
                            android:background="@drawable/okay_btn_bg"
                            android:backgroundTint="@color/black"
                            android:fontFamily="@font/roboto_bold"
                            android:onClick="@{()-> callback.onPartialWarningNoClick()}"
                            android:paddingStart="@dimen/ten_dp"
                            android:paddingTop="@dimen/two_dp"
                            android:paddingEnd="@dimen/ten_dp"
                            android:paddingBottom="@dimen/two_dp"
                            android:text="No"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen10sp" />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ten_dp"
                    android:background="@drawable/ic_rect_stroke_bisc_color"
                    android:orientation="vertical"
                    android:padding="@dimen/ten_dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Picked by : "
                            android:textColor="@color/jumbo"
                            android:textSize="@dimen/dimen12sp" />

                        <TextView
                            android:id="@+id/pick_pack_user"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen12sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end">

                            <TextView
                                android:id="@+id/status_text"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginEnd="@dimen/five_dp"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen12sp" />


                            <ImageView
                                android:id="@+id/full_status_color"
                                android:layout_width="@dimen/dimen20dp"
                                android:layout_height="@dimen/dimen20dp"
                                android:layout_toRightOf="@id/status_text"
                                android:contentDescription="@string/app_name" />

                            <ImageView
                                android:id="@+id/partial_status_color"
                                android:layout_width="@dimen/eighteen_dp"
                                android:layout_height="@dimen/eighteen_dp"
                                android:layout_marginEnd="@dimen/eight_dp"
                                android:layout_toRightOf="@id/status_text"
                                android:background="@drawable/ic_circular_partial"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/five_dp"
                                android:rotation="270"
                                android:src="@drawable/tick_mark"
                                android:visibility="gone" />
                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Order ID : "
                            android:textColor="@color/jumbo"
                            android:textSize="@dimen/dimen12sp" />

                        <TextView
                            android:id="@+id/order_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Box : "
                            android:textColor="@color/jumbo"
                            android:textSize="@dimen/dimen12sp" />

                        <TextView
                            android:id="@+id/box_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Delivery Date : "
                            android:textColor="@color/jumbo"
                            android:textSize="@dimen/dimen12sp" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen12sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Products"
                        android:textColor="@color/jumbo"
                        android:textSize="@dimen/dimen12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_horizontal"
                        android:text="Qty"
                        android:textColor="@color/jumbo"
                        android:textSize="@dimen/dimen12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_horizontal"
                        android:text="Picker Status"
                        android:textColor="@color/jumbo"
                        android:textSize="@dimen/dimen12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_horizontal"
                        android:text="Packer Status"
                        android:textColor="@color/jumbo"
                        android:textSize="@dimen/dimen12sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/five_dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen1dp"
                    android:background="@color/dark_bisccolor" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:layout_marginEnd="@dimen/ten_dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5" />


                <Button
                    android:id="@+id/take_print"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen45dp"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:layout_weight=".5"
                    android:background="@drawable/take_print_btn_bg"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:onClick="@{()-> callback.onClickTakePrint()}"
                    android:padding="@dimen/seven_dp"
                    android:text="Take Print"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/send_re_ver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/btn_ripple_effect_grey"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:onClick="@{()->callback.onClickReVerificatio()}"
                    android:padding="@dimen/seven_dp"
                    android:enabled="false"
                    android:text="Send re verification"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_grey"
                    tools:ignore="ButtonStyle" />


                <Button
                    android:id="@+id/pick_verified"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen45dp"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:layout_weight=".5"
                    android:background="@drawable/btn_ripple_effect_grey"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:enabled="false"
                    android:onClick="@{()->callback.onClickVerification()}"
                    android:padding="@dimen/seven_dp"
                    android:text="Packing verified"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_grey"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.mpospharmacistTest.ui.pbas.mpospackerflow.pickupverificationprocess.PickUpVerificationMvpPresenter" />
    </data>
</layout>
