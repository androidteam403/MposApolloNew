        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5" />


                <Button
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen45dp"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:layout_weight=".5"
                    android:background="@drawable/take_print_btn_bg"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:onClick="@{()-> callback.onClickTakePrint()}"
                    android:padding="@dimen/seven_dp"
                    android:text="Take Print"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/continue_billing_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:padding="@dimen/dimen8dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/checking_completed_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/continue_billing_check_box"
                            android:layout_width="@dimen/eighteen_dp"
                            android:layout_height="@dimen/eighteen_dp"
                            android:layout_marginEnd="@dimen/dimen3dp"
                            android:src="@drawable/ic_artboard_39" />

                        <TextView
                            android:id="@+id/continue_billing_checking_completed_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen1dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Checking Completed"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/dimen_9_sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:onClick="@{()->callback.onClickPackerStatusUpdate()}"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/continue_billing_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/dark_grey"
                            android:text="Continue Billing"
                            android:textSize="@dimen/dimen16sp" />

                        <ImageView
                            android:id="@+id/continue_billing_right_arrow"
                            android:layout_width="@dimen/sixteen_dp"
                            android:layout_height="@dimen/sixteen_dp"
                            android:layout_marginStart="@dimen/dimen5dp"
                            android:src="@drawable/right_arrow"
                            android:tint="@color/dark_grey"
                            android:visibility="visible" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/recheck_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dimen8dp"
                    android:background="@color/grey"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/recheck_checking_completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/recheck_check_box"
                            android:layout_width="@dimen/eighteen_dp"
                            android:layout_marginEnd="@dimen/dimen3dp"
                            android:layout_height="@dimen/eighteen_dp"
                            android:src="@drawable/ic_artboard_39" />

                        <TextView
                            android:id="@+id/recheck_checking_completed_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen1dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Checking Completed"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/dimen_9_sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:onClick="@{()->callback.onClickPackerStatusUpdate()}"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/recheck_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Forward to Re-Check"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/dimen16sp" />

                        <ImageView
                            android:id="@+id/recheck_right_arrow"
                            android:layout_width="@dimen/sixteen_dp"
                            android:layout_height="@dimen/sixteen_dp"
                            android:layout_marginStart="@dimen/dimen5dp"
                            android:src="@drawable/right_arrow"
                            android:tint="@color/dark_grey"
                            android:visibility="visible" />
                    </LinearLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/packer_status_update"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_five_dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/roboto_bold"
                    android:onClick="@{()-> callback.onClickPackerStatusUpdate()}"
                    android:text="@string/label_checker_status_update"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_dimen_14"
                    android:visibility="gone"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/send_re_ver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/btn_ripple_effect_grey"
                    android:enabled="false"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:onClick="@{()->callback.onClickReVerificatio()}"
                    android:padding="@dimen/seven_dp"
                    android:text="Send re verification"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_grey"
                    android:visibility="gone"
                    tools:ignore="ButtonStyle" />


                <Button
                    android:id="@+id/pick_verified"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen45dp"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:layout_weight=".5"
                    android:background="@drawable/btn_ripple_effect_grey"
                    android:enabled="false"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:onClick="@{()->callback.onClickVerification()}"
                    android:padding="@dimen/seven_dp"
                    android:text="Packing verified"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_grey"
                    android:visibility="gone"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.mpospharmacistTest.ui.pbas.mpospackerflow.pickupverificationprocess.PickUpVerificationMvpPresenter" />
