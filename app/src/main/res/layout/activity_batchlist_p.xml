<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_items"
            android:layout_marginBottom="@dimen/dimen6dp"
            android:layout_alignParentBottom="true">



        <TextView
            android:layout_centerHorizontal="true"
            android:onClick="@{()-> callback.onAddItemsClicked()}"

            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:paddingBottom="@dimen/dimen6dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@drawable/bg_cancel_btn"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Add Items"
            android:textColor="@color/white" />
        </RelativeLayout>



        <LinearLayout
            android:id="@+id/batch_detailss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen60dp"
                android:background="#01bfbf"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/dimen15dp"
                    android:layout_marginTop="@dimen/dimen22dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/left_forward_white_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginTop="@dimen/dimen22dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="BATCH ID'S"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen50dp"
                android:layout_marginStart="@dimen/five_dp"
                android:layout_marginEnd="@dimen/five_dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tablet_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/available_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                </LinearLayout>




                <ImageView
                    android:layout_width="@dimen/dimen20dp"
                    android:layout_height="@dimen/dimen20dp"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/black_delete_icon" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen3dp"
                android:background="#A9A9A9" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/five_dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Select Batch ID"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >


                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen40dp"
                android:layout_marginStart="@dimen/five_dp"
                android:layout_marginTop="@dimen/dimen5dp"
                    android:id="@+id/batchlayout"
                android:layout_marginEnd="@dimen/five_dp"
                android:background="#e6e6e6"
                android:gravity="center_vertical">

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Enter Batch ID"
                        android:id="@+id/searchbybatchId"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:padding="@dimen/five_dp"
                        android:textColor="@color/text_color_grey" />



                    <ImageView
                    android:id="@+id/search_batchlistitem"
                    android:layout_width="@dimen/dimen25dp"
                    android:layout_height="@dimen/dimen25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/five_dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/next_order" />
            </RelativeLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen3dp"
                android:layout_marginTop="@dimen/five_dp"
                android:background="#A9A9A9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/five_dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginEnd="@dimen/five_dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Select from batch list"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/batch_details1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/batch_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/batch_list"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:background="@color/batch_header_bg"
                    android:orientation="horizontal"
                    android:padding="@dimen/ten_dp"
                    tools:ignore="UselessParent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_weight="0.8"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/label_batch_no"
                        android:textColor="@color/white"
                        android:maxLines="2"
                        android:textSize="@dimen/ten_dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five_dp"
                        android:layout_weight="0.8"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="@string/label_exp_date"
                        android:textColor="@color/white"
                        android:maxLines="2"
                        android:textSize="@dimen/ten_dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="@string/label_mrp"
                        android:textColor="@color/white"
                        android:maxLines="2"
                        android:textSize="@dimen/ten_dp" />

                    <!-- <TextView
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_marginStart="@dimen/five_dp"
                         android:layout_weight="0.8"
                         android:fontFamily="@font/roboto_regular"
                         android:gravity="center"
                         android:text="V.Mrp"
                         android:textColor="@color/white"
                         android:maxLines="2"
                         android:textSize="@dimen/ten_dp" />-->

                    <!-- <TextView
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_marginStart="@dimen/five_dp"
                         android:layout_weight="0.8"
                         android:fontFamily="@font/roboto_regular"
                         android:gravity="center"
                         android:text="@string/label_tax"
                         android:textColor="@color/white"
                         android:textSize="@dimen/text_dimen_12" />-->

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="start"
                        android:text="@string/label_q_o_h"
                        android:textColor="@color/white"
                        android:maxLines="2"
                        android:textSize="@dimen/ten_dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five_dp"
                        android:layout_weight="0.8"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="start"
                        android:text="@string/label_req"
                        android:textColor="@color/white"
                        android:maxLines="2"
                        android:textSize="@dimen/ten_dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five_dp"
                        android:layout_weight="0.8"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_horizontal"
                        android:text="@string/label_phy_batch"
                        android:textColor="@color/white"
                        android:maxLines="2"
                        android:textSize="@dimen/ten_dp" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five_dp"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_horizontal"
                        android:text="@string/batch_pickup_check"
                        android:textColor="@color/white"
                        android:maxLines="2"
                        android:textSize="@dimen/ten_dp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/no_order_found_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:text="No Order Found"
            android:layout_marginTop="130dp"
            android:visibility="gone"
            android:textColor="@color/red"
            android:textSize="@dimen/dimen14sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/batch_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/batch_detailss"
            android:layout_marginTop="6dp"
            android:layout_above="@id/add_items"
            android:fadeScrollbars="false"
            android:focusableInTouchMode="true"
            android:scrollbars="vertical"
            android:visibility="visible"
            android:scrollingCache="true"
            android:smoothScrollbar="true" />
    </RelativeLayout>
<data>
    <variable
        name="callback"
        type="com.apollopharmacy.mpospharmacistTest.ui.pbas.batchlist.BatchListMvpPresenter" />
</data>

</layout>

