<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="com.apollopharmacy.mpospharmacist.ui.additem.AddItemMvpPresenter" />

        <variable
            name="call"
            type="com.apollopharmacy.mpospharmacist.ui.presenter.CustDocEditMvpView" />

        <variable
            name="customer"
            type="com.apollopharmacy.mpospharmacist.ui.customerdetails.model.GetCustomerResponse.CustomerEntity" />

        <variable
            name="doctor"
            type="com.apollopharmacy.mpospharmacist.ui.doctordetails.model.DoctorSearchResModel.DropdownValueBean" />

        <variable
            name="transaction"
            type="com.apollopharmacy.mpospharmacist.ui.searchcustomerdoctor.model.TransactionIDResModel" />

        <variable
            name="product_count"
            type="Integer" />

        <variable
            name="order_info"
            type="com.apollopharmacy.mpospharmacist.ui.additem.model.OrderPriceInfoModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_customer_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/fifty_dp"
                    android:layout_height="@dimen/fifty_dp"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.8"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()-> callback.onClickBackPressed()}"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:src="@drawable/ic_back_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_dimen_18"
                    app:full_text="@{@string/label_generic_new_order(transaction.transactionID)}"
                    app:span_color="@{@color/white}"
                    app:span_font="@{`robotoRegular`}"
                    app:span_size="@{@dimen/small_size_text}"
                    app:span_text="@{transaction.transactionID}" />
            </LinearLayout>

            <include
                layout="@layout/view_customer_doctor_info"
                app:call="@{call}"
                app:customer="@{customer}"
                app:doctor="@{doctor}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:orientation="vertical"
                android:paddingTop="@dimen/fifteen_dp"
                android:visibility="@{ product_count == 0 ? View.GONE : View.VISIBLE}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/fifteen_dp"
                    android:paddingEnd="@dimen/fifteen_dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/label_add_medicines"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_dimen_15" />

                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_marginStart="@dimen/five_dp"
                        android:contentDescription="@string/app_name"
                        android:onClick="@{()->callback.onManualSearchClick()}"
                        android:src="@drawable/ic_search_product" />

                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_marginEnd="@dimen/ten_dp"
                        android:contentDescription="@string/app_name"
                        android:onClick="@{()->callback.onVoiceSearchClick()}"
                        android:src="@drawable/ic_voice_search" />

                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:contentDescription="@string/app_name"
                        android:onClick="@{()->callback.onBarCodeSearchClick()}"
                        android:src="@drawable/ic_barcode" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/five_dp"
                            android:layout_toStartOf="@+id/clear_all_img"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/label_clear_all_txt"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dimen_15" />

                        <ImageView
                            android:id="@+id/clear_all_img"
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="@dimen/thirty_dp"
                            android:layout_alignParentEnd="true"
                            android:contentDescription="@string/app_name"
                            android:onClick="@{()-> callback.onClickClearAllBtn()}"
                            android:src="@drawable/ic_clear_all" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginBottom="@dimen/three_dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_weight="1.2"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@{@string/label_product_item_count(product_count)}"
                        android:textColor="@color/add_item_header"
                        android:textSize="@dimen/text_dimen_13" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.26"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="MRP()"
                        android:textColor="@color/add_item_header"
                        android:textSize="@dimen/text_dimen_10" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.24"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="QTY."
                        android:textColor="@color/add_item_header"
                        android:textSize="@dimen/text_dimen_10" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="TOTAL()"
                        android:textColor="@color/add_item_header"
                        android:textSize="@dimen/text_dimen_10" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{ product_count == 0 ? View.GONE : View.VISIBLE}">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/medicineRecycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/footer" />

                <LinearLayout
                    android:id="@+id/footer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighty_dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/ten_dp"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_disc_type(order_info.discType)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_pharma_price(order_info.PharmaTotalAmount)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_FMCG_price(order_info.FmcgTotalAmount)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_PL_price(order_info.PlTotalAmount)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/ten_dp"
                            android:layout_marginTop="@dimen/ten_dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_RoundedAmt_price(order_info.RoundedAmount)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_MRP_Total_price(order_info.MrpTotalAmount)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_Taxable_Amt_price(order_info.TaxableTotalAmount)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_Disc_Amt_price(order_info.DiscTotalAmount)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@color/pay_btn_color"
                        android:gravity="center"
                        android:onClick="@{()-> callback.onPayButtonClick()}"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/fifteen_dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@{String.valueOf(order_info.OrderTotalAmount)}"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_dimen_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@{String.format(@string/label_savings_price(order_info.OrderSavingsAmount) + `(`+order_info.OrderSavingsPercentage+`% )`)}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dimen_9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="PAY"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dimen_20" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="@{ product_count != 0 ? View.GONE : View.VISIBLE}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/label_add_items"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dimen_16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()->callback.onManualSearchClick()}"
                    android:src="@drawable/ic_search_product" />

                <ImageView
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()->callback.onVoiceSearchClick()}"
                    android:src="@drawable/ic_voice_search" />

                <ImageView
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()->callback.onBarCodeSearchClick()}"
                    android:src="@drawable/ic_barcode" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.3"
            android:background="@color/cpb_yellow"
            android:text="@string/label_continue"
            android:textAllCaps="false"
            android:textSize="@dimen/text_dimen_17"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>
</layout>
