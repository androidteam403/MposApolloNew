<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="com.apollopharmacy.mpospharmacist.ui.additem.AddItemMvpPresenter" />

        <variable
            name="call"
            type="com.apollopharmacy.mpospharmacist.ui.presenter.CustDocEditMvpView" />

        <variable
            name="customer"
            type="com.apollopharmacy.mpospharmacist.ui.customerdetails.model.GetCustomerResponse.CustomerEntity" />

        <variable
            name="doctor"
            type="com.apollopharmacy.mpospharmacist.ui.doctordetails.model.DoctorSearchResModel.DropdownValueBean" />

        <variable
            name="transaction"
            type="com.apollopharmacy.mpospharmacist.ui.searchcustomerdoctor.model.TransactionIDResModel" />

        <variable
            name="product_count"
            type="Integer" />

        <variable
            name="order_info"
            type="com.apollopharmacy.mpospharmacist.ui.additem.model.OrderPriceInfoModel" />

        <variable
            name="isPaymentMode"
            type="Boolean" />

        <variable
            name="paymentMode"
            type="com.apollopharmacy.mpospharmacist.ui.pay.model.PaymentMethodModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_customer_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/fifty_dp"
                    android:layout_height="@dimen/fifty_dp"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.8"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()-> callback.onClickBackPressed()}"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:src="@drawable/ic_back_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_dimen_18"
                    app:full_text="@{@string/label_generic_new_order(transaction.transactionID)}"
                    app:span_color="@{@color/white}"
                    app:span_font="@{`robotoRegular`}"
                    app:span_size="@{@dimen/small_size_text}"
                    app:span_text="@{transaction.transactionID}" />
            </LinearLayout>

            <include
                layout="@layout/view_customer_doctor_info"
                app:call="@{call}"
                app:customer="@{customer}"
                app:doctor="@{doctor}" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{isPaymentMode ? View.GONE : View.VISIBLE}">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:orientation="vertical"
                android:paddingTop="@dimen/fifteen_dp"
                android:visibility="@{ product_count == 0 ? View.GONE : View.VISIBLE}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/fifteen_dp"
                    android:paddingEnd="@dimen/fifteen_dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/label_add_medicines"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_dimen_15" />

                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_marginStart="@dimen/five_dp"
                        android:contentDescription="@string/app_name"
                        android:onClick="@{()->callback.onManualSearchClick()}"
                        android:src="@drawable/ic_search_product" />

                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_marginEnd="@dimen/ten_dp"
                        android:contentDescription="@string/app_name"
                        android:onClick="@{()->callback.onVoiceSearchClick()}"
                        android:src="@drawable/ic_voice_search" />

                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:contentDescription="@string/app_name"
                        android:onClick="@{()->callback.onBarCodeSearchClick()}"
                        android:src="@drawable/ic_barcode" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/five_dp"
                            android:layout_toStartOf="@+id/clear_all_img"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/label_clear_all_txt"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dimen_15" />

                        <ImageView
                            android:id="@+id/clear_all_img"
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="@dimen/thirty_dp"
                            android:layout_alignParentEnd="true"
                            android:contentDescription="@string/app_name"
                            android:onClick="@{()-> callback.onClickClearAllBtn()}"
                            android:src="@drawable/ic_clear_all" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginBottom="@dimen/three_dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_weight="1.2"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@{@string/label_product_item_count(product_count)}"
                        android:textColor="@color/add_item_header"
                        android:textSize="@dimen/text_dimen_13" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.26"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="MRP()"
                        android:textColor="@color/add_item_header"
                        android:textSize="@dimen/text_dimen_10" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.24"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="QTY."
                        android:textColor="@color/add_item_header"
                        android:textSize="@dimen/text_dimen_10" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="TOTAL()"
                        android:textColor="@color/add_item_header"
                        android:textSize="@dimen/text_dimen_10" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{ product_count == 0 ? View.GONE : View.VISIBLE}">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/medicineRecycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/footer" />

                <LinearLayout
                    android:id="@+id/footer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighty_dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/ten_dp"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_disc_type(order_info.discType)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_pharma_price(order_info.PharmaTotalAmount)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_FMCG_price(order_info.FmcgTotalAmount)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_PL_price(order_info.PlTotalAmount)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/ten_dp"
                            android:layout_marginTop="@dimen/ten_dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_RoundedAmt_price(order_info.RoundedAmount)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_MRP_Total_price(order_info.MrpTotalAmount)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_Taxable_Amt_price(order_info.TaxableTotalAmount)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_Disc_Amt_price(order_info.DiscTotalAmount)}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_dimen_9" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@color/pay_btn_color"
                        android:gravity="center"
                        android:onClick="@{()-> callback.onPayButtonClick()}"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/fifteen_dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@{String.valueOf(order_info.OrderTotalAmount)}"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_dimen_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@{@string/label_savings_price(order_info.OrderSavingsAmount) + `(`+order_info.OrderSavingsPercentage+`%)`}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dimen_9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="PAY"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dimen_20" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{isPaymentMode ? View.VISIBLE : View.GONE}">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:background="@color/white"
                    android:padding="@dimen/five_dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_marginEnd="@dimen/ten_dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@{@string/label_product_item_count(product_count)}"
                        android:textAllCaps="true" />

                    <ImageView
                        android:layout_width="@dimen/twenty_dp"
                        android:layout_height="@dimen/eighteen_dp"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_edit_view"
                        android:onClick="@{()-> callback.onClickEditItemsList()}"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sixty_dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="80dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/ten_dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_disc_type(order_info.discType)}"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_pharma_price(order_info.PharmaTotalAmount)}"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_FMCG_price(order_info.FmcgTotalAmount)}"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_PL_price(order_info.PlTotalAmount)}"
                                android:textSize="@dimen/text_dimen_9" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten_dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/ten_dp"
                                android:layout_marginTop="@dimen/five_dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_RoundedAmt_price(order_info.RoundedAmount)}"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/five_dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_MRP_Total_price(order_info.MrpTotalAmount)}"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/five_dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_Taxable_Amt_price(order_info.TaxableTotalAmount)}"
                                android:textSize="@dimen/text_dimen_9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/five_dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{@string/label_Disc_Amt_price(order_info.DiscTotalAmount)}"
                                android:textSize="@dimen/text_dimen_9" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/fifteen_dp"
                            android:text="@{String.valueOf(order_info.OrderTotalAmount)}"
                            android:textColor="@color/payment_amount_text"
                            android:textSize="@dimen/text_dimen_16"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{@string/label_savings_price(order_info.OrderSavingsAmount) + `(`+order_info.OrderSavingsPercentage+`%)`}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dimen_9" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/seven_dp"
                    android:background="@color/white"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:padding="@dimen/ten_dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/text_dimen_13"
                        android:text="Additional Discount : "
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five_dp"
                        android:background="@drawable/bg_apply_btn"
                        android:paddingStart="@dimen/ten_dp"
                        android:paddingTop="@dimen/five_dp"
                        android:paddingEnd="@dimen/ten_dp"
                        android:paddingBottom="@dimen/five_dp"
                        android:text="Apply"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/five_dp"
                    android:padding="@dimen/ten_dp"
                    android:background="@color/colorPrimary"
                    android:weightSum="1"
                    android:visibility="@{paymentMode.isAdditionalDisc ? View.VISIBLE : View.GONE}">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="amount payable: "
                            android:textAllCaps="true"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Additional Discount: 10:00(5%) "
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_dimen_10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/roboto_bold"
                            android:text="119.70"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pay_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingTop="@dimen/five_dp"
                    android:paddingEnd="@dimen/ten_dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:background="@color/red"
                    android:padding="@dimen/seven_dp"
                    android:visibility="@{paymentMode.isBalanceAmount ? View.VISIBLE : View.GONE}">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/fifteen_dp"
                        android:layout_height="@dimen/fifteen_dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name"
                        android:layout_marginStart="@dimen/fifteen_dp"
                        android:src="@drawable/ic_alert_error" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/fifteen_dp"
                        android:layout_toEndOf="@id/image"
                        android:fontFamily="@font/roboto_bold"
                        android:text="balance amount: "
                        android:textAllCaps="true"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/three_dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="9.70"
                        android:textSize="@dimen/text_dimen_15"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:text="payment method"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:textColor="@color/payment_type_header"
                    android:textAllCaps="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:onClick="@{()-> callback.onClickCashPayment()}"
                        android:background="@{paymentMode.isCashMode ? @drawable/bg_payment_progress : @drawable/bg_payment_pending}">

                        <ImageView
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="@dimen/thirty_dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_cash_black"
                            android:tint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Cash"
                            android:layout_marginTop="@dimen/three_dp"
                            android:textSize="@dimen/text_dimen_13"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/eight_dp"
                        android:layout_marginEnd="@dimen/eight_dp"
                        android:background="@{paymentMode.isCardMode ? @drawable/bg_payment_progress : @drawable/bg_payment_pending}"
                        android:onClick="@{()-> callback.onClickCardPayment()}">

                        <ImageView
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="@dimen/thirty_dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_card_black"
                            android:tint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Card"
                            android:layout_marginTop="@dimen/three_dp"
                            android:textSize="@dimen/text_dimen_13"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_payment_pending"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="@dimen/thirty_dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_wallet_black"
                            android:tint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Wallet"
                            android:layout_marginTop="@dimen/three_dp"
                            android:textSize="@dimen/text_dimen_13"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/eight_dp"
                        android:background="@drawable/bg_payment_pending"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="@dimen/thirty_dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_other_black"
                            android:tint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Other"
                            android:layout_marginTop="@dimen/three_dp"
                            android:textSize="@dimen/text_dimen_13"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:background="@color/white"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/ten_dp"
                    android:visibility="@{paymentMode.isCashMode ? View.VISIBLE : View.GONE }">

                    <TextView
                        android:id="@+id/cash_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="cash payment: "
                        android:layout_marginEnd="@dimen/ten_dp"
                        android:textColor="@color/add_item_header"
                        android:textAllCaps="true" />

                    <EditText
                        android:id="@+id/cash_payment_amount_edit"
                        android:layout_width="@dimen/eighty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/cash_payment"
                        android:background="@drawable/rounded_corners_white"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:inputType="number"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_toEndOf="@+id/cash_payment_amount_edit"
                        android:background="@drawable/bg_apply_btn"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="@dimen/ten_dp"
                        android:paddingTop="@dimen/five_dp"
                        android:paddingEnd="@dimen/ten_dp"
                        android:paddingBottom="@dimen/five_dp"
                        android:text="Update"
                        android:textColor="@color/white"
                        android:onClick="@{()-> callback.onClickCashPaymentPay()}"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:background="@color/white"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/ten_dp"
                    android:orientation="horizontal"
                    android:visibility="@{paymentMode.isCardMode ? View.VISIBLE : View.GONE }">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="card payment: "
                        android:layout_marginEnd="@dimen/ten_dp"
                        android:textColor="@color/add_item_header"
                        android:textAllCaps="true"
                        android:gravity="center_vertical"/>

                    <EditText
                        android:id="@+id/card_payment_amount_edit_text"
                        android:layout_width="@dimen/eighty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:background="@drawable/rounded_corners_white"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:inputType="number"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:background="@drawable/bg_apply_btn"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="@dimen/ten_dp"
                        android:paddingTop="@dimen/five_dp"
                        android:paddingEnd="@dimen/ten_dp"
                        android:paddingBottom="@dimen/five_dp"
                        android:text="Pay"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:onClick="@{()-> callback.onClickCardPaymentPay()}"/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="@{ product_count != 0 ? View.GONE : View.VISIBLE}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/label_add_items"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dimen_16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()->callback.onManualSearchClick()}"
                    android:src="@drawable/ic_search_product" />

                <ImageView
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()->callback.onVoiceSearchClick()}"
                    android:src="@drawable/ic_voice_search" />

                <ImageView
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()->callback.onBarCodeSearchClick()}"
                    android:src="@drawable/ic_barcode" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.3"
            android:background="@color/cpb_yellow"
            android:text="@string/label_continue"
            android:textAllCaps="false"
            android:textSize="@dimen/text_dimen_17"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>
</layout>
