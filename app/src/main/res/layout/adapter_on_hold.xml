<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/fullfillment_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen5dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/order_child_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/square_stroke_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dimen2dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/label_sfulfilment_id"
                        android:textColor="#b6b4af"
                        android:textSize="@dimen/dimen10sp" />

                    <TextView
                        android:id="@+id/fullfilment_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@{model.refno}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Total Items : "
                        android:textColor="#b6b4af"
                        android:textSize="@dimen/dimen10sp" />

                    <TextView
                        android:id="@+id/items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@{String.valueOf(model.getNumberofItemLines())}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Pickup Status : "
                        android:textColor="#b6b4af"
                        android:textSize="@dimen/dimen10sp" />

                    <TextView
                        android:id="@+id/pickup_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@{model.stockStatus}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Source Order ID : "
                        android:textColor="#b6b4af"
                        android:textSize="@dimen/dimen10sp" />

                    <TextView
                        android:id="@+id/order_source_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@{model.orderSource}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen10sp" />
                </LinearLayout>

                <!--            android:onClick="@{()-> callback.onRightArrowClickedContinue()}"-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="@dimen/dimen30dp"
                    android:layout_height="@dimen/dimen30dp"
                    android:layout_gravity="end"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/right_arrow_black"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/un_hold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen5dp"
                    android:background="@drawable/bg_onhold_enable_btn"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:paddingStart="@dimen/dimen6dp"
                    android:paddingTop="@dimen/dimen1dp"
                    android:paddingEnd="@dimen/dimen6dp"
                    android:paddingBottom="@dimen/dimen1dp"
                    android:text="Un Hold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen10sp" />

                <!--                <TextView-->
                <!--                    android:id="@+id/un_hold"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:background="@drawable/bg_cancel_btn"-->
                <!--                    android:backgroundTint="@color/sea_blue"-->
                <!--                    android:fontFamily="@font/roboto_bold"-->
                <!--                    android:gravity="center"-->
                <!--                    android:paddingStart="@dimen/seven_dp"-->
                <!--                    android:paddingEnd="@dimen/seven_dp"-->
                <!--                    android:text="@string/label_unhold"-->
                <!--                    android:textColor="@color/white"-->
                <!--                    android:textSize="@dimen/dimen14sp" />-->


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <data>

        <variable
            name="view"
            type="android.view.View" />

        <variable
            name="model"
            type="com.apollopharmacy.mpospharmacistTest.ui.pbas.openorders.model.TransactionHeaderResponse.OMSHeader" />
    </data>
</layout>