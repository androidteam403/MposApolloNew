<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

        <include
            android:id="@+id/app_bar_main"
            layout="@layout/app_bar_main_p"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/actionbar_color"
            android:fitsSystemWindows="true"
            android:paddingTop="@dimen/fifteen_dp"
            android:theme="@style/NavigationTheme"
            app:headerLayout="@layout/nav_header_main_p"
            app:itemBackground="@drawable/nav_item_drawable"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:menu="@menu/activity_main_drawer_p">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/fifteen_dp"
                android:gravity="bottom|center_horizontal">

                <TextView
                    android:layout_width="@dimen/dimen100dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/ten_dp"
                    android:gravity="center"
                    android:background="@drawable/rounded_corners"
                    android:paddingTop="@dimen/three_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:paddingBottom="@dimen/three_dp"
                    android:text="Log Out"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black" />
            </RelativeLayout>

        </com.google.android.material.navigation.NavigationView>


    </androidx.drawerlayout.widget.DrawerLayout>
</layout>