<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="displayItem"
            type="com.apollopharmacy.mpospharmacistTest.ui.additem.model.ManualDiscCheckRes.DisplayList" />
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/ten_dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{displayItem.categoryDescription}"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:fontFamily="@font/roboto_regular"/>
    <EditText
        android:id="@+id/cash_payment_amount_edit"
        android:layout_width="@dimen/one_hundred_dp"
        android:layout_height="@dimen/forty_dp"
        android:background="@drawable/rounded_corners_white"
        android:fontFamily="@font/roboto_light"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="number"
        android:digits="0123456789."
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:cursorVisible="false"
        android:text="0"
        android:imeOptions="actionNext"/>

</RelativeLayout>
</layout>