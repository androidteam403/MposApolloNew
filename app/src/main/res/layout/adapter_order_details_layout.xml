<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/fullfillment_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen10dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/topStrip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen1dp"
                    android:background="#dbdbdb"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/order_child_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen2dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen7dp"
                        android:layout_marginTop="@dimen/dimen7dp"
                        android:layout_marginBottom="@dimen/dimen7dp"
                        android:layout_weight=".7"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/status_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="@dimen/dimen2dp"
                            android:clickable="false"
                            android:contentDescription="@string/app_name"
                            android:rotation="-90"
                            android:src="@drawable/partialcirculargreeenorange" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Ascorial D Plus Syrup Sugar Free"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen10sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/dimen7dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Status"
                                    android:textColor="#b6b4af"
                                    android:textSize="@dimen/dimen10sp" />

                                <TextView
                                    android:id="@+id/statusPending"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rounded_rectangle_bg"
                                    android:fontFamily="@font/roboto_regular"
                                    android:paddingStart="@dimen/_4dp"
                                    android:paddingTop="@dimen/dimen1dp"
                                    android:paddingEnd="@dimen/_4dp"
                                    android:paddingBottom="@dimen/dimen1dp"
                                    android:text="Pending"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/dimen_9_sp" />

                                <TextView
                                    android:id="@+id/statusDone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rounded_rectangle_bg"
                                    android:backgroundTint="@color/green"
                                    android:fontFamily="@font/roboto_regular"
                                    android:paddingStart="@dimen/dimen5dp"
                                    android:paddingTop="@dimen/dimen1dp"
                                    android:paddingEnd="@dimen/dimen5dp"
                                    android:paddingBottom="@dimen/dimen1dp"
                                    android:text="Done"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/dimen_9_sp"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dimen7dp"
                        android:layout_marginEnd="@dimen/dimen7dp"
                        android:layout_marginBottom="@dimen/dimen7dp"
                        android:layout_weight=".3"
                        android:gravity="end"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/inprogressOrderCountLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen10dp"
                            android:gravity="end"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/inprogressCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="0"
                                android:textColor="#b6b4af"
                                android:textSize="@dimen/dimen12sp" />

                            <TextView
                                android:id="@+id/inprogressSlash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="/"
                                android:textColor="#b6b4af"
                                android:textSize="@dimen/dimen12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/requestOrderCountLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="@dimen/dimen10dp"
                            android:gravity="end"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/requestCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="5"
                                android:textColor="#2ea275"
                                android:textSize="@dimen/dimen12sp" />

                            <TextView
                                android:id="@+id/requestSlash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="/"
                                android:textColor="#2ea275"
                                android:textSize="@dimen/dimen12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen12sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/down_arrow"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="130dp"
                            android:contentDescription="@string/app_name"
                            android:rotation="90"
                            android:src="@drawable/black_right_arroww"
                            android:visibility="gone" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reasonLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_marginEnd="9dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Expiry Issue : showing expiry differen date"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen_11sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dimen7dp"
                        android:gravity="end|center_vertical">

                        <TextView
                            android:layout_width="@dimen/dimen70dp"
                            android:layout_height="wrap_content"
                            android:background="@color/green"
                            android:gravity="center"
                            android:paddingTop="@dimen/dimen7dp"
                            android:paddingBottom="@dimen/dimen7dp"
                            android:text="APPROVE"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_11sp" />

                        <TextView
                            android:layout_width="@dimen/dimen70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen7dp"
                            android:background="@color/red"
                            android:gravity="center"
                            android:paddingTop="@dimen/dimen7dp"
                            android:paddingBottom="@dimen/dimen7dp"
                            android:text="REJECT"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_11sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>