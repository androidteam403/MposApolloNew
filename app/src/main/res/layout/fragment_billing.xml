<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="callbacks"
            type="com.apollopharmacy.mpospharmacist.ui.home.ui.billing.BillingMvpPresenter" />

        <variable
            name="customer"
            type="com.apollopharmacy.mpospharmacist.ui.customerdetails.model.GetCustomerResponse.CustomerEntity" />

        <variable
            name="doctor"
            type="com.apollopharmacy.mpospharmacist.ui.doctordetails.model.DoctorSearchResModel.DropdownValueBean" />

        <variable
            name="sales"
            type="com.apollopharmacy.mpospharmacist.ui.doctordetails.model.SalesOriginResModel.DropdownValueBean" />

        <variable
            name="corporate"
            type="com.apollopharmacy.mpospharmacist.ui.corporatedetails.model.CorporateModel.DropdownValueBean" />

        <variable
            name="transaction"
            type="com.apollopharmacy.mpospharmacist.ui.searchcustomerdoctor.model.TransactionIDResModel" />

        <variable
            name="prg_tracking"
            type="Boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/black"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/search_customer_bg">

            <LinearLayout
                android:id="@+id/action_bar_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/twenty_five_dp"
                android:background="@color/cpb_yellow"
                android:orientation="horizontal"
                android:paddingStart="@dimen/twenty_dp"
                android:paddingEnd="@dimen/five_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/three_dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Site Name: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dimen_11" />

                <TextView
                    android:id="@+id/site_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/three_dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:singleLine="true"
                    android:text="testing"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dimen_11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:layout_marginTop="@dimen/three_dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Site Id: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dimen_11" />

                <TextView
                    android:id="@+id/site_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/three_dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:singleLine="true"
                    android:text="000"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dimen_11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:layout_marginTop="@dimen/three_dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Terminal Id: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dimen_11" />

                <TextView
                    android:id="@+id/terminal_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/three_dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:singleLine="true"
                    android:text="111"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dimen_11" />
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/action_bar_view">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fifty_five_dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/customer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_marginEnd="@dimen/ten_dp"
                        android:layout_marginBottom="@dimen/ten_dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/five_dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/label_customer_details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dimen_16" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="@{customer != null ? View.GONE : View.VISIBLE}">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/fifteen_dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/label_phone_number_id"
                                android:textColor="@color/customer_header_text"
                                android:textSize="@dimen/text_dimen_13" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/forty_dp"
                                android:layout_marginTop="@dimen/five_dp"
                                android:background="@drawable/rectangular_shape"
                                android:onClick="@{()-> callbacks.onCustomerSearchClick()}"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/roboto_regular"
                                    android:hint="@string/label_search_by_phone_number"
                                    android:paddingStart="@dimen/five_dp"
                                    android:paddingEnd="@dimen/five_dp"
                                    android:textSize="@dimen/text_dimen_13" />

                                <ImageView
                                    android:layout_width="@dimen/thirty_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:contentDescription="@string/app_name"
                                    android:paddingStart="@dimen/five_dp"
                                    android:paddingEnd="@dimen/five_dp"
                                    android:src="@drawable/ic_search" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/EditTextInputLayoutStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/five_dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_regular">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/customer_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                                        android:fontFamily="@font/roboto_regular"
                                        android:hint="Name*"
                                        android:imeOptions="actionNext"
                                        android:inputType="textPersonName"
                                        android:padding="@dimen/ten_dp"
                                        android:singleLine="true"
                                        android:textSize="@dimen/text_dimen_15" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/EditTextInputLayoutStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/five_dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_regular">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/customer_mobile"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:digits="0123456789"
                                        android:fontFamily="@font/roboto_regular"
                                        android:hint="@string/label_mobile1"
                                        android:imeOptions="actionDone"
                                        android:inputType="number"
                                        android:maxLength="10"
                                        android:padding="@dimen/ten_dp"
                                        android:singleLine="true"
                                        android:textSize="@dimen/text_dimen_15" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>

                            <com.tiper.MaterialSpinner
                                android:id="@+id/gender"
                                style="@style/EditTextInputLayoutStylenew"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/sixty_dp"
                                android:layout_margin="@dimen/five_dp"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="@string/label_gender"
                                app:spinnerMode="bottomsheet" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/fifteen_dp"
                            android:onClick="@{()-> callbacks.onClickCustomerEdit(customer)}"
                            android:visibility="@{customer == null ? View.GONE : View.VISIBLE}">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:textColor="@color/customer_header_text"
                                        android:textSize="@dimen/text_dimen_12"
                                        app:full_text="@{@string/label_generic_name(customer.cardName)}"
                                        app:span_color="@{@color/black}"
                                        app:span_font="@{`robotoMedium`}"
                                        app:span_size="@{@dimen/small_size_text}"
                                        app:span_text="@{customer.cardName}" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/ten_dp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="Billing Code: \nPOS1234"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_dimen_12"
                                        android:visibility="gone" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:textColor="@color/customer_header_text"
                                        android:textSize="@dimen/text_dimen_12"
                                        app:full_text="@{@string/label_generic_phone_no(customer.mobileNo)}"
                                        app:span_color="@{@color/black}"
                                        app:span_font="@{`robotoMedium`}"
                                        app:span_size="@{@dimen/small_size_text}"
                                        app:span_text="@{customer.mobileNo}" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/ten_dp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="Tracking Ref No: \n0-NS NORMALSALE"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_dimen_12"
                                        android:visibility="gone" />
                                </LinearLayout>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/twenty_seven_dp"
                                android:layout_height="@dimen/twenty_seven_dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_next_level" />
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/details_divider_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/one_dp"
                        android:layout_below="@+id/customer_layout"
                        android:background="@color/customer_doctor_divider" />

                    <LinearLayout
                        android:id="@+id/doctor_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_divider_view"
                        android:layout_margin="@dimen/ten_dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/label_doctor_details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dimen_16"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="@{doctor != null ? View.GONE : View.VISIBLE}">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/fifteen_dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/label_registration_number_id"
                                android:textColor="@color/customer_header_text"
                                android:textSize="@dimen/text_dimen_13" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/forty_dp"
                                android:layout_marginTop="@dimen/five_dp"
                                android:background="@drawable/rectangular_shape"
                                android:onClick="@{()-> callbacks.onDoctorSearchClick()}"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/roboto_regular"
                                    android:hint="@string/label_search_by_registration_number"
                                    android:paddingStart="@dimen/five_dp"
                                    android:paddingEnd="@dimen/five_dp"
                                    android:textSize="@dimen/text_dimen_13" />

                                <ImageView
                                    android:layout_width="@dimen/thirty_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:contentDescription="@string/app_name"
                                    android:paddingStart="@dimen/five_dp"
                                    android:paddingEnd="@dimen/five_dp"
                                    android:src="@drawable/ic_search" />
                            </RelativeLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/twenty_dp"
                            android:onClick="@{()-> callbacks.onDoctorEditClick(doctor, sales)}"
                            android:visibility="@{doctor == null ? View.GONE : View.VISIBLE}">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:textColor="@color/customer_header_text"
                                        android:textSize="@dimen/text_dimen_12"
                                        app:full_text="@{@string/label_generic_doctor_reg_no(doctor.code)}"
                                        app:span_color="@{@color/black}"
                                        app:span_font="@{`robotoMedium`}"
                                        app:span_size="@{@dimen/small_size_text}"
                                        app:span_text="@{doctor.code}" />

                                    <!--                                <TextView-->
                                    <!--                                    android:layout_width="wrap_content"-->
                                    <!--                                    android:layout_height="wrap_content"-->
                                    <!--                                    android:layout_marginTop="@dimen/ten_dp"-->
                                    <!--                                    android:fontFamily="@font/roboto_regular"-->
                                    <!--                                    android:textColor="@color/customer_header_text"-->
                                    <!--                                    android:textSize="@dimen/text_dimen_12"-->
                                    <!--                                    app:full_text="@{@string/label_generic_sales_origin(sales.displayText)}"-->
                                    <!--                                    app:span_color="@{@color/black}"-->
                                    <!--                                    app:span_font="@{`robotoMedium`}"-->
                                    <!--                                    app:span_size="@{@dimen/small_size_text}"-->
                                    <!--                                    app:span_text="@{sales.displayText}" />-->
                                </LinearLayout>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/customer_header_text"
                                    android:textSize="@dimen/text_dimen_12"
                                    app:full_text="@{@string/label_generic_doctor_name(doctor.displayText)}"
                                    app:span_color="@{@color/black}"
                                    app:span_font="@{`robotoMedium`}"
                                    app:span_size="@{@dimen/small_size_text}"
                                    app:span_text="@{doctor.displayText}" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/twenty_seven_dp"
                                android:layout_height="@dimen/twenty_seven_dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_next_level" />
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/corporate_divider_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/one_dp"
                        android:layout_below="@+id/doctor_layout"
                        android:background="@color/customer_doctor_divider" />

                    <LinearLayout
                        android:id="@+id/corporate_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/corporate_divider_view"
                        android:layout_margin="@dimen/ten_dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/label_corporate_details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dimen_16"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="@{corporate != null ? View.GONE : View.VISIBLE}">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/fifteen_dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/label_registration_number_id"
                                android:textColor="@color/customer_header_text"
                                android:textSize="@dimen/text_dimen_13" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/forty_dp"
                                android:layout_marginTop="@dimen/five_dp"
                                android:background="@drawable/rectangular_shape"
                                android:onClick="@{()-> callbacks.onCorporateSearchClick()}"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/roboto_regular"
                                    android:hint="@string/label_search_by_registration_number"
                                    android:paddingStart="@dimen/five_dp"
                                    android:paddingEnd="@dimen/five_dp"
                                    android:textSize="@dimen/text_dimen_13" />

                                <ImageView
                                    android:layout_width="@dimen/thirty_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:contentDescription="@string/app_name"
                                    android:paddingStart="@dimen/five_dp"
                                    android:paddingEnd="@dimen/five_dp"
                                    android:src="@drawable/ic_search" />
                            </RelativeLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/twenty_dp"
                            android:onClick="@{()-> callbacks.onCorporateEditClick(corporate)}"
                            android:visibility="@{corporate == null ? View.GONE : View.VISIBLE}">

                            <LinearLayout
                                android:id="@+id/corporate_details_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/corp_no"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/customer_header_text"
                                    android:textSize="@dimen/text_dimen_12"
                                    app:full_text="@{@string/label_generic_corporate_no(corporate.code)}"
                                    app:span_color="@{@color/black}"
                                    app:span_font="@{`robotoMedium`}"
                                    app:span_size="@{@dimen/small_size_text}"
                                    app:span_text="@{corporate.code}" />

                                <TextView
                                    android:id="@+id/corp_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_regular"
                                    android:paddingEnd="@dimen/thirty_dp"
                                    android:textColor="@color/customer_header_text"
                                    android:textSize="@dimen/text_dimen_12"
                                    app:full_text="@{@string/label_generic_corporate_name(corporate.description)}"
                                    app:span_color="@{@color/black}"
                                    app:span_font="@{`robotoMedium`}"
                                    app:span_size="@{@dimen/small_size_text}"
                                    app:span_text="@{corporate.description}" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/twenty_seven_dp"
                                android:layout_height="@dimen/twenty_seven_dp"
                                android:layout_alignParentEnd="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_next_level" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/site_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="@dimen/zero_dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/five_dp"
                                android:layout_marginEnd="@dimen/thirty_dp"
                                android:layout_weight="0.35"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Tier:" />

                                <TextView
                                    android:id="@+id/tier"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/five_dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="--"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/zero_dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/five_dp"
                                android:layout_marginEnd="@dimen/thirty_dp"
                                android:layout_weight="0.7"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Available Amount:" />

                                <TextView
                                    android:id="@+id/available_points"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/five_dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="--"
                                    android:textColor="@color/black" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/site_details"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/EditTextInputLayoutStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/corporate_details_view"
                                    android:layout_marginTop="@dimen/five_dp"
                                    android:layout_marginEnd="@dimen/thirty_dp"
                                    android:layout_weight="0.9"
                                    android:fontFamily="@font/roboto_regular">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/prg_tracking_edit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 "
                                        android:fontFamily="@font/roboto_regular"
                                        android:hint="Prg.Tracking"
                                        android:imeOptions="actionDone"
                                        android:inputType="text"
                                        android:padding="@dimen/ten_dp"
                                        android:singleLine="true"
                                        android:textSize="@dimen/text_dimen_15" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                    android:id="@+id/upload_api"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/fifteen_dp"
                                    android:layout_marginEnd="@dimen/twenty_dp"
                                    android:layout_weight="0.1"
                                    android:background="@drawable/rounded_background"
                                    android:onClick="@{()-> callbacks.onUploadApiCall()}"
                                    android:paddingTop="@dimen/three_dp"
                                    android:text="GO"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <com.tiper.MaterialSpinner
                                android:id="@+id/sales_origin"
                                style="@style/EditTextInputLayoutStylenew"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/five_dp"
                                android:layout_marginEnd="@dimen/thirty_dp"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="SalesOrigin"
                                app:spinnerMode="bottomsheet" />


                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <Button
                android:id="@+id/continue_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/fifty_five_dp"
                android:alpha="0.3"
                android:background="@color/cpb_yellow"
                android:fontFamily="@font/roboto_bold"
                android:onClick="@{()->callbacks.onContinueBtnClick()}"
                android:text="@string/label_continue"
                android:textAllCaps="false"
                android:textSize="@dimen/text_dimen_17"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>

</layout>
