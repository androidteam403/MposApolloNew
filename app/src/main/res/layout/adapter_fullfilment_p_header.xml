<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false">

        <LinearLayout
            android:id="@+id/shipment_date_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen30dp"
            android:layout_marginBottom="@dimen/dimen2dp"
            android:background="#fff0cf"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen3dp"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/select_icon"
                    android:layout_width="@dimen/dimen20dp"
                    android:layout_height="@dimen/dimen20dp"
                    android:focusableInTouchMode="false"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_artboard_39" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingEnd="@dimen/dimen5dp"
                    android:focusableInTouchMode="false"
                    android:text="Shipping TAT"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_11sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/shipment_count_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="(4)"
                    android:focusableInTouchMode="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_11sp"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shipment_date_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingEnd="@dimen/dimen5dp"
                    android:text="23/10/2023 - 11:30:00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_11sp"
                    android:focusableInTouchMode="false"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

