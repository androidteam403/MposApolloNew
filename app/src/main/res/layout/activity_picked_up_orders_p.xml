        <TextView
            android:id="@+id/zeropicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_bold"
            android:text="Zero Picked Up Orders"
            android:textColor="@color/red"
            android:textSize="@dimen/dimen16sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:background="@color/continue_unselect_color"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/prev_page"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen5dp"
                android:background="@{isPrevtPage ?  @drawable/next_page_enable_bg : @drawable/next_page_disable_bg}"
                android:clickable="@{isPrevtPage ? true : false}"
                android:contentDescription="@string/app_name"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:onClick="@{()-> callback.onClickPrevPage()}"
                android:padding="@dimen/dimen10dp"
                android:rotation="180"
                android:src="@drawable/ic_arrow__next_page"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dimen_9" />


            <ImageView
                android:id="@+id/next_page"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen5dp"
                android:background="@{isNaxtPage ?  @drawable/next_page_enable_bg : @drawable/next_page_disable_bg}"
                android:clickable="@{isNaxtPage ? true : false}"
                android:contentDescription="@string/app_name"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:onClick="@{()-> callback.onClickNextPage()}"
                android:padding="@dimen/dimen10dp"
                android:src="@drawable/ic_arrow__next_page"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dimen_9" />

        </RelativeLayout>

    </RelativeLayout>

    <data>

        <variable
            name="isContinueSelect"
            type="Boolean" />

        <variable
            name="view"
            type="android.view.View" />

        <variable
            name="filter"
            type="com.apollopharmacy.mpospharmacistTest.ui.pbas.mpospackerflow.pickeduporders.PickedUpOrdersMvpPresenter" />

        <variable
            name="callback"
            type="com.apollopharmacy.mpospharmacistTest.ui.pbas.mpospackerflow.pickeduporders.PickedUpOrdersMvpPresenter" />

        <variable
            name="isNaxtPage"
            type="Boolean" />

        <variable
            name="isPrevtPage"
            type="Boolean" />
    </data>
</layout>