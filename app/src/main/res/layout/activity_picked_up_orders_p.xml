                        android:layout_marginStart="@dimen/three_dp"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/five_dp"
                        android:src="@drawable/tag_box"
                        android:tint="@color/white" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_rectangular_shape"
                        android:backgroundTint="@color/green"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Search"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ten_sp" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/scanBarcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/five_dp"
                    android:gravity="center"
                    android:onClick="@{()-> callback.onClickScanBarCode()}"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen150dp"
                        android:layout_height="@dimen/dimen150dp"
                        android:src="@drawable/ic_barcode"/>

                    <!--<ImageView
                        android:layout_width="@dimen/twenty_five_dp"
                        android:layout_height="@dimen/twenty_five_dp"
