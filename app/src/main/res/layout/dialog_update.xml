<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="@dimen/dimen5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Ascoril D Plus Syrup Sugar Free"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen10sp" />

            <ImageView
                android:id="@+id/closeButton"
                android:layout_width="@dimen/dimen22dp"
                android:layout_height="@dimen/dimen22dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:contentDescription="@string/app_name"
                android:src="@drawable/delete_white_icon" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_layout"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f2f2f2"
                android:orientation="vertical"
                android:padding="@dimen/ten_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FL20230117301108524"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Batch No"
                            android:textSize="@dimen/dimen10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AP364782022"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Strip MRP"
                            android:textSize="@dimen/dimen10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="115.50"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apollo 24/7 MRP"
                            android:textSize="@dimen/dimen10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120.00/OMS"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_11sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_rectangle_bg"
                            android:backgroundTint="#8cc63f"
                            android:paddingStart="@dimen/dimen10dp"
                            android:paddingTop="@dimen/_4dp"
                            android:paddingEnd="@dimen/dimen10dp"
                            android:paddingBottom="@dimen/_4dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="@dimen/_4dp"
                                android:src="@drawable/cart"
                                android:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="001"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen7dp"
                            android:background="@drawable/rounded_rectangle_bg"
                            android:backgroundTint="#009245"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dimen10dp"
                            android:paddingTop="@dimen/_4dp"
                            android:paddingEnd="@dimen/dimen10dp"
                            android:paddingBottom="@dimen/_4dp">

                            <CheckBox
                                android:layout_width="@dimen/dimen25dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="@dimen/dimen10dp"
                                android:buttonTint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="User Scanner"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen7dp"
                            android:background="@drawable/rounded_rectangle_bg"
                            android:backgroundTint="#b3b3b3"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dimen10dp"
                            android:paddingTop="@dimen/_4dp"
                            android:paddingEnd="@dimen/dimen10dp"
                            android:paddingBottom="@dimen/_4dp">

                            <CheckBox
                                android:layout_width="@dimen/dimen25dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="@dimen/dimen10dp"
                                android:buttonTint="@color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fully Picked"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fullyPickedChildLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen50dp"
                        android:layout_marginTop="@dimen/dimen7dp"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <EditText
                            android:layout_width="@dimen/dimen40dp"
                            android:layout_height="@dimen/dimen22dp"
                            android:background="@drawable/rectangle_rounded_corners_white"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:paddingStart="@dimen/dimen5dp"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ten_sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  /"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:background="@drawable/rounded_rectangle_bg"
                            android:backgroundTint="#e6e6e6"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/dimen6dp"
                            android:paddingTop="@dimen/dimen4dp"
                            android:paddingEnd="@dimen/dimen6dp"
                            android:paddingBottom="@dimen/dimen4dp">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="@dimen/dimen3dp"
                                android:src="@drawable/ic_baseline_book_24"
                                android:tint="#b3b3b3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select Batch"
                                android:textSize="@dimen/dimen_9_sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen7dp"
                            android:background="@drawable/rounded_rectangle_bg"
                            android:backgroundTint="#b3b3b3"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dimen10dp"
                            android:paddingTop="@dimen/_4dp"
                            android:paddingEnd="@dimen/dimen10dp"
                            android:paddingBottom="@dimen/_4dp">

                            <CheckBox
                                android:layout_width="@dimen/dimen25dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="@dimen/dimen10dp"
                                android:buttonTint="@color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Partially Picked"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen7dp"
                            android:background="@drawable/rounded_rectangle_bg"
                            android:backgroundTint="#b3b3b3"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dimen10dp"
                            android:paddingTop="@dimen/_4dp"
                            android:paddingEnd="@dimen/dimen10dp"
                            android:paddingBottom="@dimen/_4dp">

                            <CheckBox
                                android:layout_width="@dimen/dimen25dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="@dimen/dimen10dp"
                                android:buttonTint="@color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not Available"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen7dp"
                            android:background="@drawable/rounded_rectangle_bg"
                            android:backgroundTint="#b3b3b3"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dimen10dp"
                            android:paddingTop="@dimen/_4dp"
                            android:paddingEnd="@dimen/dimen10dp"
                            android:paddingBottom="@dimen/_4dp">

                            <CheckBox
                                android:layout_width="@dimen/dimen25dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="@dimen/dimen10dp"
                                android:buttonTint="@color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Skip"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen7dp"
                            android:background="@drawable/rounded_rectangle_bg"
                            android:backgroundTint="#01bebf"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dimen10dp"
                            android:paddingTop="@dimen/_4dp"
                            android:paddingEnd="@dimen/dimen10dp"
                            android:paddingBottom="@dimen/_4dp">

                            <CheckBox
                                android:id="@+id/raiseComplaintCheckbox"
                                android:layout_width="@dimen/dimen25dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="@dimen/dimen10dp"
                                android:buttonTint="@color/black"
                                android:checked="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Raise a Complaint"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/raiseComplaintChildLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="@dimen/dimen7dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen25dp"
                                android:buttonTint="@color/black"
                                android:text="MRP"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_11sp"
                                android:textStyle="bold" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/black"
                                android:text="Expiry"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_11sp"
                                android:textStyle="bold" />
                        </RadioGroup>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen100dp"
                            android:layout_marginStart="@dimen/dimen7dp"
                            android:layout_marginEnd="@dimen/dimen25dp"
                            android:background="@drawable/rectangle_rounded_corners_white"
                            android:gravity="top|left"
                            android:paddingStart="@dimen/dimen10dp"
                            android:paddingTop="@dimen/dimen5dp"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/updateButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen50dp"
                android:layout_marginTop="@dimen/dimen15dp"
                android:background="@color/material_amber_accent_700"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_4dp"
                android:paddingBottom="@dimen/_4dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/selected_item_count"
                    android:layout_width="@dimen/dimen40dp"
                    android:layout_height="@dimen/dimen40dp"
                    android:layout_marginEnd="@dimen/dimen10dp"
                    android:background="@drawable/ic_circle_lite_yellow_bg"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="5/5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dimen_9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="update"
                    android:textAllCaps="true"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/postButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen50dp"
                android:layout_marginTop="@dimen/dimen15dp"
                android:background="@color/material_amber_accent_700"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_4dp"
                android:paddingBottom="@dimen/_4dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="post"
                    android:textAllCaps="true"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>