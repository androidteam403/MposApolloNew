<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen1dp"
        android:layout_marginEnd="@dimen/dimen1dp"
        android:layout_marginBottom="@dimen/one_dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginEnd="@dimen/five_dp"
            android:padding="@dimen/dimen7dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".82"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/ten_sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Rack ID: "
                        android:textColor="@color/text_color_grey"
                        android:textSize="@dimen/ten_sp" />

                    <TextView
                        android:id="@+id/rack_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/ten_sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:gravity="center"
                android:layout_marginBottom="@dimen/text_dimen_7"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/dimen30dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/captures_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/eight_sp" />

                <TextView
                    android:id="@+id/available_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/eight_sp" />

            </LinearLayout>


            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="@dimen/text_dimen_17"
                android:layout_gravity="center"
                android:id="@+id/pickerStatusIcon"
                android:layout_marginBottom="7dp"
                />


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/headings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:text="Batch No"
                android:fontFamily="@font/roboto_regular"

                android:paddingStart="@dimen/dimen10dp"
                android:textColor="@color/grey"
                android:textSize="@dimen/eight_sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"

                android:text="@string/label_exp_date"
                android:textColor="@color/grey"
                android:textSize="@dimen/eight_sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"

                android:text="@string/label_mrp"
                android:textColor="@color/grey"
                android:textSize="@dimen/eight_sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"

                android:text="@string/requied_qty"
                android:textColor="@color/grey"
                android:textSize="@dimen/eight_sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/selectedbatches_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen2dp"
            android:layout_marginEnd="@dimen/five_dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1dp"
            android:background="@color/light_grey" />

    </LinearLayout>
</layout>