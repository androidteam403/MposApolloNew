<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/five_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginEnd="@dimen/five_dp"
            android:background="@color/yello_outlet"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:padding="@dimen/five_dp"
            android:text="CIRCLE MEMBERSHIP"
            android:textColor="@color/black"
            android:textSize="@dimen/text_dimen_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/ten_dp">

            <LinearLayout
                android:id="@+id/plan_one_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/circle_plan_199"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/plan_two_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/circle_plan_399"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirty_dp"
            android:layout_marginBottom="@dimen/fifteen_dp"
            android:gravity="center">

            <TextView
                android:id="@+id/continue_btn"
                android:layout_width="@dimen/one_hundred_dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/twenty_dp"
                android:background="@drawable/bg_select_btn"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/roboto_medium"
                android:text="Enroll"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_dimen_16"
                android:visibility="visible" />

            <TextView
                android:layout_width="@dimen/one_hundred_dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_toEndOf="@+id/continue_btn"
                android:background="@drawable/bg_select_btn"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Exit"
                android:textColor="@color/white"
                android:textSize="@dimen/text_dimen_16"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>