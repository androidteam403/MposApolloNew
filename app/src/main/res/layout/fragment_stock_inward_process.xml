<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/label_from_date"
                        android:textSize="@dimen/dimen12sp" />

                    <TextView
                        android:id="@+id/from_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_white_grey_stroke"
                        android:fontFamily="@font/roboto_regular"
                        android:onClick="@{()-> callback.onClickFromDate()}"
                        android:padding="@dimen/dimen5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_weight=".35"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/label_to_date"
                        android:textSize="@dimen/dimen12sp" />

                    <TextView
                        android:id="@+id/to_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_white_grey_stroke"
                        android:fontFamily="@font/roboto_regular"
                        android:onClick="@{()-> callback.onClickToDate()}"
                        android:padding="@dimen/dimen5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen12sp" />

                </LinearLayout>

                <RelativeLayout
                    android:onClick="@{()-> callback.onClickShow()}"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen5dp"
                        android:background="@color/green"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:paddingTop="@dimen/dimen5dp"
                        android:paddingBottom="@dimen/dimen5dp"
                        android:text="@string/label_show"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_dimen_14" />
                </RelativeLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/stock_inward_process_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen5dp" />

            <TextView
                android:layout_marginTop="@dimen/dimen150dp"
                android:id="@+id/noRecordFound"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Record Found"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.mpospharmacistTest.ui.pbas.pickerhome.ui.stockinwardprocess.StockInwardProcessMvpPresenter" />
    </data>
</layout>