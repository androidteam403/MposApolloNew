<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.mpospharmacist.ui.pay.payadapter.PayAdapterListener" />

        <variable
            name="model"
            type="com.apollopharmacy.mpospharmacist.ui.pay.payadapter.PayAdapterModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
                <RelativeLayout

                    android:background="@color/white"
                    android:padding="@dimen/seven_dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/close_icon"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_centerVertical="true"
                        android:background="@color/selectstorecolor"
                        android:src="@drawable/icon_address_close" />

                    <ImageView
                        android:layout_marginStart="@dimen/ten_dp"
                        android:id="@+id/icon_cash"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:background="@color/black"
                        android:src="@drawable/icon_address_close"
                        android:layout_toEndOf="@+id/close_icon" />

                    <TextView
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cash paid:"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_bold"
                        android:textAllCaps="true"
                        android:layout_toEndOf="@+id/icon_cash"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/three_dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@{model.amount}"
                        android:textColor="@color/selectstorecolor" />
                </RelativeLayout>

    </LinearLayout>
</layout>
