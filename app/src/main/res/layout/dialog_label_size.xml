<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/dialog_background"
        android:stateListAnimator="@null">

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:paddingRight="12dp"
            android:text="Choose Label Size"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="19sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/label_size_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/dimen15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <RadioButton
                android:id="@+id/four_six_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/label_4x6"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen15sp" />

            <RadioButton
                android:id="@+id/a_four_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/label_a4"
                android:checked="true"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen15sp" />

            <RadioButton
                android:id="@+id/a_five_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:fontFamily="@font/roboto_medium"
                android:text="A5"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen15sp" />


        </RadioGroup>

    </RelativeLayout>
</layout>
