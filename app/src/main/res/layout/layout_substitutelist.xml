<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_status_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_stroke_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">


        <TextView
            android:id="@+id/item_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/five_dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black" />

        <RelativeLayout
            android:id="@+id/substitute_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/text_dimen_10"
                android:layout_height="@dimen/text_dimen_10"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen5dp"
                android:rotation="270"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />
        </RelativeLayout>



    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/substitute_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_status_dropdown"
        android:layout_marginBottom="@dimen/five_dp" />

</RelativeLayout>