<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/ten_dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Products"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eight_sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/captures_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/eight_sp" />

                    <TextView
                        android:id="@+id/available_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/eight_sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.15"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/picker_status_icon"
                        android:layout_width="20dp"
                        android:layout_height="@dimen/dimen20dp"
                        android:layout_marginStart="@dimen/dimen5dp"
                        android:layout_marginEnd="@dimen/dimen5dp"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.15"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/update"
                        android:layout_width="@dimen/dimen60dp"
                        android:layout_height="@dimen/dimen18sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen5dp"
                        android:background="@drawable/rounded_corners_bg"
                        android:backgroundTint="@color/green"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/dimen6dp"
                        android:paddingTop="@dimen/dimen1dp"
                        android:paddingEnd="@dimen/dimen6dp"
                        android:paddingBottom="@dimen/dimen1dp"
                        android:text="update"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="8dp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/packer_status_icon"
                        android:layout_width="20dp"
                        android:layout_height="@dimen/dimen20dp"
                        android:layout_marginStart="@dimen/dimen5dp"
                        android:layout_marginEnd="@dimen/dimen5dp"
                        android:contentDescription="@string/app_name"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/headings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/ten_dp"
                android:paddingEnd="@dimen/ten_dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_weight=".25"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Batch No"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/eight_sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@string/label_exp_date"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/eight_sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@string/label_mrp"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/eight_sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@string/requied_qty"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/eight_sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selectedbatches_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen2dp"
                android:paddingStart="@dimen/ten_dp"
                android:paddingEnd="@dimen/ten_dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/light_grey" />

    </RelativeLayout>
</layout>
