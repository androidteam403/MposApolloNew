<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="callBack"
            type="com.apollopharmacy.mpospharmacist.ui.searchuser.SearchUserMvpPresenter" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/fifteen_dp"
        android:paddingEnd="@dimen/fifteen_dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:fontFamily="@font/roboto_regular"
            app:hintTextAppearance="@style/TextAppearanceBlack.App.TextInputLayout">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/name"
                style="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_login_user"
                android:drawableEnd="@drawable/icon_search_product"
                android:drawablePadding="@dimen/ten_dp"
                android:fontFamily="@font/roboto_regular"
                android:hint="Search name"
                android:inputType="text"
                android:singleLine="true"
                android:textCursorDrawable="@color/black"
                android:textSize="@dimen/text_dimen_15" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/add_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/ten_dp"
                android:text="Customer not found" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:onClick="@{()-> callBack.onClickAdd()}"
                android:layout_marginTop="@dimen/fifty_dp"
                android:text="Add" />
        </RelativeLayout>
    </LinearLayout>
</layout>
